<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PP.MAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Button 
            Text="Manage Clients" 
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="FillAndExpand"
            Clicked="OnClientButtonClicked" />

        <Button 
            Text="Manage Projects" 
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="FillAndExpand"
            Clicked="OnProjectButtonClicked" />

        <Button 
            Text="Manage Employees" 
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="FillAndExpand"
            Clicked="OnEmployeesButtonClicked" />

        <Button 
            Text="Manage Time Records" 
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="FillAndExpand"
            Clicked="OnTimeButtonClicked" />

        <Button 
            Text="Manage Bills" 
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="FillAndExpand"
            Clicked="OnBillButtonClicked" />

    </VerticalStackLayout>
    </ScrollView>

</ContentPage>